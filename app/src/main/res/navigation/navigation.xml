<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_start">

    <fragment
        android:id="@+id/nav_start"
        android:name="de.stefan_oltmann.kaesekaestchen.ui.StartFragment"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_nav_start_to_nav_spiel"
            app:destination="@id/nav_spiel" />
    </fragment>

    <fragment
        android:id="@+id/nav_spiel"
        android:name="de.stefan_oltmann.kaesekaestchen.ui.SpielFragment"
        tools:layout="@layout/fragment_spiel" >
        <argument
            android:name="spieler_1_ki"
            app:argType="boolean" />
        <argument
            android:name="spieler_2_ki"
            app:argType="boolean" />
        <argument
            android:name="feld_groesse_x"
            app:argType="integer" />
        <argument
            android:name="feld_groesse_y"
            app:argType="integer" />
        <action
            android:id="@+id/action_nav_spiel_to_gewonnenFragment"
            app:destination="@id/nav_gewonnen"
            app:popUpTo="@id/nav_spiel"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_gewonnen"
        android:name="de.stefan_oltmann.kaesekaestchen.ui.GewonnenFragment"
        tools:layout="@layout/fragment_gewonnen" >
        <action
            android:id="@+id/action_nav_gewonnen_to_nav_start"
            app:destination="@id/nav_start"
            app:popUpTo="@id/nav_gewonnen"
            app:popUpToInclusive="true" />
        <argument
            android:name="gewinner_id"
            app:argType="integer" />
        <argument
            android:name="punktestand_kaese"
            app:argType="integer" />
        <argument
            android:name="punktestand_maus"
            app:argType="integer" />
    </fragment>

</navigation>